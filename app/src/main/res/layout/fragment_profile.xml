<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="?attr/actionBarSize"
    android:visibility="visible"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="60dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/alata"
                            android:text="Name"
                            android:textSize="28sp"
                            tools:ignore="DuplicateIds,HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Name"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            android:textColorHint="#787777"
                            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/alata"
                            android:text="Age"
                            android:textSize="28sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/age"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            tools:ignore="DuplicateIds,DuplicateSpeakableTextCheck,InefficientWeight,LabelFor,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/alata"
                            android:text="Gender"
                            android:textSize="28sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="gender"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            android:visibility="visible"
                            tools:ignore="DuplicateIds,HardcodedText,InefficientWeight,LabelFor,TouchTargetSizeCheck,VisualLintTextFieldSize"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/alata"
                            android:text="Email"
                            android:textSize="28sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Email"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            android:textColorHint="#787777"
                            android:visibility="visible"
                            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,TextContrastCheck,TextFields,VisualLintTextFieldSize"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/alata"
                            android:text="Password"
                            android:textColorHint="#787777"
                            android:textSize="28sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Password"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            android:textColorHint="#787777"
                            android:visibility="visible"
                            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,SpeakableTextPresentCheck,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginEnd="30dp"
                            android:fontFamily="@font/alata"
                            android:text="Hint"
                            android:textSize="28sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Profile_user_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:backgroundTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Hint"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/AppSecondaryColorX"
                            android:textColorHint="#787777"
                            android:visibility="visible"
                            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,TouchTargetSizeCheck,VisualLintTextFieldSize"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/AppSecondaryColorX"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/Edit_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/AppSecondaryColorX"
                                android:fontFamily="@font/alata"
                                android:text="Edit"
                                android:textSize="24sp"
                                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

                            <Button
                                android:id="@+id/update_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/AppSecondaryColorX"
                                android:cursorVisible="false"
                                android:text="Update"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>