<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/AppPrimaryColorX"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="My Profile"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/nav_profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--            <de.hdodenhof.circleimageview.CircleImageView-->
                <!--                android:id="@+id/profile_image"-->
                <!--                android:layout_width="60dp"-->
                <!--                android:layout_height="60dp"-->
                <!--                android:layout_marginTop="10dip"-->
                <!--                android:layout_gravity="center_horizontal"-->
                <!--                android:src="@drawable/nav_profile"-->
                <!--                app:civ_border_width="2dp"-->
                <!--                app:civ_border_color="#FF000000"/>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardOfProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="60dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Name"
                                    android:textSize="20sp"
                                    tools:ignore="DuplicateIds,HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="Name"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:textColorHint="#787777"
                                    tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize,TouchTargetSizeCheck"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/text_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Age"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="@string/age34"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    tools:ignore="DuplicateIds,DuplicateSpeakableTextCheck,InefficientWeight,LabelFor,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Gender"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_gender"
                                    android:layout_width="224dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="gender"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:visibility="visible"
                                    tools:ignore="DuplicateIds,HardcodedText,InefficientWeight,LabelFor,TouchTargetSizeCheck,VisualLintTextFieldSize"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView3334"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/alata"
                                    android:text="Phone no."
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/profile_user_phoneno"
                                    android:layout_width="224dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="phone no."
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:visibility="visible"
                                    tools:ignore="DuplicateIds,HardcodedText,InefficientWeight,LabelFor,TouchTargetSizeCheck,VisualLintTextFieldSize"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Email"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_Email"
                                    android:layout_width="259dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="Email"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:textColorHint="#787777"
                                    android:visibility="visible"
                                    tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,TextContrastCheck,TextFields,VisualLintTextFieldSize,TouchTargetSizeCheck"
                                    tools:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Password"
                                    android:textColorHint="#787777"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="Password"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:textColorHint="#787777"
                                    android:visibility="visible"
                                    tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,SpeakableTextPresentCheck,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_marginEnd="30dp"
                                    android:fontFamily="@font/alata"
                                    android:text="Hint"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:id="@+id/Profile_user_hint"
                                    android:layout_width="277dp"
                                    android:layout_height="58dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:backgroundTint="@color/black"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:hint="Hint"
                                    android:inputType="text"
                                    android:minHeight="48dp"
                                    android:textColor="@color/AppSecondaryColorX"
                                    android:textColorHint="#787777"
                                    android:visibility="visible"
                                    tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,InefficientWeight,TouchTargetSizeCheck,VisualLintTextFieldSize"
                                    tools:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:cardCornerRadius="10dp"
                                app:contentPadding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/user_logout_button"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:layout_weight="1"
                                            android:backgroundTint="@color/black"
                                            android:fontFamily="@font/alata"
                                            android:text="Logout"
                                            android:textSize="24sp" />

                                        <Button
                                            android:id="@+id/Edit_btn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:layout_weight="1"
                                            android:backgroundTint="@color/black"
                                            android:fontFamily="@font/alata"
                                            android:text="Edit"
                                            android:textSize="24sp"
                                            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

                                        <Button
                                            android:id="@+id/update_btn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/AppSecondaryColorX"
                                            android:cursorVisible="false"
                                            android:text="@string/update"
                                            android:textColor="#FFFFFF"
                                            android:textSize="24sp"
                                            android:visibility="gone"
                                            tools:ignore="TextViewEdits" />
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>