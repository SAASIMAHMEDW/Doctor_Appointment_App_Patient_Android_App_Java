<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/doctor_img_splashsscreen"
        android:label="@string/app_name"
        android:roundIcon="@drawable/doctor_img_splashsscreen"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appmai"
        tools:targetApi="31">
        <activity
            android:name=".MakeAppointmentActivity"
            android:exported="false" />
        <activity
            android:name=".ViewActivity"
            android:exported="false" />
        <activity
            android:name=".MainPanel"
            android:exported="false" />
        <activity
            android:name=".PatientsLoginActivity"
            android:exported="false" />
        <activity
            android:name=".PatientsRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".PatientsSplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

<!--        <service android:name=".NotificationStatusService"/>-->
    </application>

</manifest>